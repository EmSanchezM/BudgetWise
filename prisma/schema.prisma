// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  firstName  String
  lastName String
  password String
  accounts Account[]
  budgets Budget[]
  transactions Transaction[]
  categories Category[]
  @@index([email])
}

model Account {
  id    Int     @id @default(autoincrement())
  name String
  numberAccount String @unique
  type String
  balance Float
  transactions Transaction[]
  userId Int
  user User @relation(fields: [userId], references: [id])
  @@index([numberAccount])
}

model Transaction {
  id    Int     @id @default(autoincrement())
  name String
  transactionDate DateTime
  amount Float
  currency String
  description String
  isExpense Boolean
  accountId Int
  account Account @relation(fields: [accountId], references: [id])
  userId Int
  user User @relation(fields: [userId], references: [id])
}

model Budget {
  id    Int     @id @default(autoincrement())
  name String
  initDate DateTime
  finishDate DateTime
  amount Float
  currency String
  categoryId Int
  category Category @relation(fields: [categoryId], references: [id])
  userId Int
  user User @relation(fields: [userId], references: [id])
}

model Category {
  id    Int     @id @default(autoincrement())
  name String
  description String
  color String
  budgets Budget[]
  userId Int
  user User @relation(fields: [userId], references: [id])
}
